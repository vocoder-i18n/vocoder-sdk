{
  "name": "vocoder-sdk",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "dev": "pnpm run watch:all",
    "watch": "pnpm run watch:all",
    "watch:react": "pnpm --dir packages/react watch",
    "watch:cli": "pnpm --dir packages/cli watch",
    "watch:all": "concurrently \"pnpm watch:react\" \"pnpm watch:cli\"",
    "lint": "pnpm -r --if-present run lint",
    "clean": "pnpm -r --if-present run clean",
    "test": "pnpm -r --if-present run test",
    "release": "changeset publish",
    "prepublishOnly": "pnpm run build",
    "clean:all": "pnpm run clean && find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true && pnpm install && pnpm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.19.9",
    "concurrently": "^9.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.4.0"
  }
}
