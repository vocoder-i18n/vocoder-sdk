{
  "name": "@vocoder/cli",
  "version": "0.1.1",
  "description": "CLI tool for Vocoder translation workflow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "vocoder": "dist/bin.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vocoder/vocoder-sdk.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "cli",
    "localization",
    "extraction",
    "ast",
    "babel"
  ],
  "author": "Vocoder <admin@vocoder.app>",
  "license": "MIT",
  "homepage": "https://github.com/vocoder/vocoder-sdk#readme",
  "bugs": {
    "url": "https://github.com/vocoder/vocoder-sdk/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude 'src/__tests__/integration/**'",
    "test:integration": "vitest run src/__tests__/integration",
    "test:integration:skip": "SKIP_INTEGRATION=true vitest run",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/parser": "^7.26.0",
    "@babel/traverse": "^7.26.0",
    "@babel/types": "^7.26.0",
    "@vocoder/types": "^0.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.6",
    "@types/node": "^20.19.9",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
